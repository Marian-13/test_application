<div class='photos-pagination'>
  <% if previous_page_exists?(current_page) %>
    <%= render partial: 'photos/previous_photos_form',
               locals: { photos: photos, current_page: current_page, tag: tag } %>
  <% else %>
    <button class="btn btn-default left disabled">Previous</button>
  <% end %>

  <% if photos.pagination.next_max_tag_id %>
    <%= render partial: 'photos/next_photos_form',
               locals: { photos: photos, current_page: current_page, tag: tag } %>
  <% else %>
    <button class="btn btn-default rigth disabled">Next</button>
  <% end %>
</div>
